#!/bin/bash  -e

#Carrega as variáveis do arquivo ini local
. local-facil.ini

#Se tentar iniciar, erro
if [[ $1 == "iniciar" ]]; then echo "Para iniciar digite 'bash iniciar' dentro do diretorio $diretorio_facil" exit 1; fi



#Se não definir variáveis, envia mensagens
if [ -z "$1" ]
then
	echo Olá mundo!
	echo Digite: facil ajuda 
else
	bash $diretorio_facil/$1 $2
fi

